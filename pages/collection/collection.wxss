/* 中国色 */

page {
  width: 100%;
  height: 100%;
}

.hide {
  display: none !important;
}

.collection {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  min-height: 100%;
  border: 1rpx solid transparent;
}

.collection-nav {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.6);
  z-index: 1000;
}

.collection-nav .nav-li {
  font-size: 32rpx;
  color: #000;
}

.collection-nav .nav-li-act {
  color: #f00;
}
/* 暂无收藏 */
.collection .no-collection {
  display: block;
  margin: 300rpx auto 0;
  text-align: center;
  font-size: 36rpx;
  color: #ddd;
}

.collection .no-collection .word {
  margin-bottom: 20rpx;
}

/* 开眼视频 */

.collec-videos {
  padding: 20rpx;
  width: 100%;
  height: auto;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.collec-videos .video-li {
  position: relative;
  width: 95%;
  display: flex;
  height: 240rpx;
  margin: 0 auto 20rpx;
  box-shadow: 0 0 10rpx #ddd;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #fff;
}

.collec-videos .video-cancel {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.collec-videos .video-img {
  position: relative;
  width: 48%;
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  flex: none;
}

.collec-videos .video-img image {
  width: 100%;
  height: 100%;
}

.collec-videos .video-img .time {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  padding: 5rpx 10rpx;
  background: rgba(0, 0, 0, 0.3);
  font-size: 24rpx;
  color: #fff;
}

.collec-videos .video-cont {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin: 10rpx 0;
  box-sizing: border-box;
  justify-content: space-between;
}

.collec-videos .video-cont .cont-title {
  width: 80%;
  height: auto;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  flex: none;
}
.collec-videos .video-cont .cont-category {
  font-size: 26rpx;
  color: #ddd;
}
.collec-videos .cont-b {
  width: 100%;
  display: flex;
  align-items: center;
}
.collec-videos .cont-b .author-img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  flex: none;
}
.collec-videos .cont-b .cont-r-author {
  font-size: 26rpx;
  color: #444;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}